.back {
  margin-bottom: 20px;
}

.back__link {
  font-size: 14px;
  font-weight: 600;
  text-decoration: none;
  border-bottom: 1px solid #000;
  position: relative;
  padding-left: 8px;
  &:after {
    content: "<";
    position: absolute;
    top: 2px;
    left: 0;
    @include phones {
      top: 1px;
    }
  }
}
