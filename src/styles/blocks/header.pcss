.header__wrapper {
  padding: 15px 0;
  box-shadow: 0 0 50px 0 #e9e9e9;
  margin-bottom: 40px;
  position: relative;
}

.header {
  display: flex;
  @include tablets {
    justify-content: center;
  }
}

.header__content {
  &_top {
    margin-bottom: 10px;
    display: flex;
    justify-content: space-between;
    @include tablets {
      margin-bottom: 0;
    }
  }
}
